<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

      <xacro:include filename="inertial_macros.xacro" />

      <!-- Base footprint -->

      <link name="base_footprint"></link>

      <joint name="base_footprint_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
      </joint>

      <!-- Base link -->

      <link name="base_link">
         <pose>0 0 0.1 0 0 0</pose>

      </link>

      <!-- Chassis link -->

      <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
      </joint>

      <link name="chassis">
         <visual>
            <origin xyz="0 0 0.075"/>
            <geometry>
               <cylinder radius="0.15" length="0.09"/>
            </geometry>
            <material name="chassis_material">
               <color rgba="0.40 0.23 0.72 1.0"/>
            </material>
         </visual>
         <collision>
            <origin xyz="0 0 0.075"/>
            <geometry>
               <cylinder radius="0.15" length="0.09"/>
            </geometry>
         </collision>
         <xacro:inertial_cylinder mass="0.5" length="0.09" radius="0.15">
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
         </xacro:inertial_cylinder>
      </link>

      <!-- Left wheel link -->
      <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
      </joint>

      <link name="left_wheel">
         <visual>
            <geometry>
               <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name="wheel_material">
               <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
         </visual>
         <collision>
            <geometry>
               <cylinder radius="0.03" length="0.02"/>
            </geometry>
         </collision>
         <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
         </xacro:inertial_cylinder>
      </link>

      <!-- Right wheel link -->
      <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
      </joint>

      <link name="right_wheel">
         <visual>
            <geometry>
               <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name="wheel_material">
                <color rgba="0.0 0.0 0.0 1.0"/>
            </material>
         </visual>
         <collision>
            <geometry>
               <cylinder radius="0.03" length="0.02"/>
            </geometry>
         </collision>
            <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
         </xacro:inertial_cylinder>
      </link>

      <!-- Castor wheel link -->
      <joint name="castor_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="castor_wheel"/>
        <origin xyz="0.12 0 0"/>
      </joint>

      <link name="castor_wheel">
         <visual>
            <geometry>
               <sphere radius="0.03"/>
            </geometry>
            <material name="castor_material">
                <color rgba="0.62 0.62 0.62 1.0"/>
            </material>
         </visual>
         <collision>
            <geometry>
               <sphere radius="0.03"/>
            </geometry>
         </collision>
         <xacro:inertial_sphere mass="0.1" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
         </xacro:inertial_sphere>
      </link>

      <!-- IMU -->
      <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </joint>

      <link name="imu_link">
      </link>

      <gazebo reference="imu_link">
        <sensor name="imu" type="imu">
            <always_on>1</always_on>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <topic>imu</topic>
            <enable_metrics>true</enable_metrics>
            <gz_frame_id>imu_link</gz_frame_id>
        </sensor>
      </gazebo>

      <!-- Gazebo Parameters -->
      <gazebo reference="chassis_link">
         <mu1>1.0</mu1>
         <mu2>1.0</mu2>
      </gazebo>

      <gazebo reference="right_wheel">
         <mu1>1.0</mu1>
         <mu2>1.0</mu2>
      </gazebo>

      <gazebo reference="left_wheel">
         <mu1>1.0</mu1>
         <mu2>1.0</mu2>
      </gazebo>

      <gazebo reference="castor_wheel">
         <mu1>0.000001</mu1>
         <mu2>0.000001</mu2>
      </gazebo>


</robot>